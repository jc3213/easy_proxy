{
    "name": "Easy Proxy",
    "description": "An ease to use auto-proxy browser extension",
    "version": "0.5.0",
    "manifest_version": 3,
    "permissions": [
        "proxy",
        "storage",
        "unlimitedStorage",
        "webRequest",
        "contextMenus",
        "tabs"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "libs/matchpattern.js",
                "scripts/message.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "pages/popup/popup.html"
    },
    "options_ui": {
        "page": "pages/options/options.html",
        "open_in_tab": true
    }
}
