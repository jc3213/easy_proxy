{
    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "0.6.2",
    "manifest_version": 2,
    "permissions": [
        "proxy",
        "storage",
        "unlimitedStorage",
        "webRequest",
        "contextMenus",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "default_locale": "en",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "pages/popup/popup.html"
    },
    "options_ui": {
        "page": "pages/options/options.html",
        "open_in_tab": true
    }
}
