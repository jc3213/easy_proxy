{
    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "0.8.1",
    "manifest_version": 3,
    "permissions": [
        "proxy",
        "storage",
        "unlimitedStorage",
        "webNavigation",
        "webRequest",
        "contextMenus",
        "tabs"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "default_locale": "en",
    "background": {
        "service_worker": "application.js"
    },
    "action": {
        "default_popup": "pages/popup/popup.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+P"
            }
        },
        "persistent_mode": {
            "suggested_key": {
                "default": "Alt+Shift+M"
            },
            "description": "Persistent mode"
        }
    },
    "options_ui": {
        "page": "pages/options/options.html",
        "open_in_tab": true
    }
}
