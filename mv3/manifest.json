{
    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "0.6.1",
    "manifest_version": 3,
    "permissions": [
        "proxy",
        "storage",
        "unlimitedStorage",
        "webRequest",
        "contextMenus",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "default_locale": "en",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "pages/popup/popup.html"
    },
    "options_ui": {
        "page": "pages/options/options.html",
        "open_in_tab": true
    }
}
