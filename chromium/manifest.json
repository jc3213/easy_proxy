{
    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.6.2",
    "manifest_version": 2,
    "permissions": [
        "proxy",
        "storage",
        "unlimitedStorage",
        "webNavigation",
        "webRequest",
        "contextMenus",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "default_locale": "en",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "scripts": [
            "libs/matchpattern.js",
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "24": "icons/24.png"
        },
        "default_popup": "pages/popup/popup.html"
    },
    "options_ui": {
        "page": "pages/options/options.html",
        "open_in_tab": true
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+Shift+P"
            }
        }
    }
}
